%scanner ../Scanner/Scanner.h
%token-path ../Scanner/tokens.h

%token DOUBLE INTEGRAL

%%
                                // Display the prompt, and then take in commands
start: prompt commands;

                                // A one or more list of commands
commands:
  commands command
|
  command
;

command:
                              // No more commands
  '\n'
  {
    ACCEPT();
  }
|
  'm' number nextPrompt
|
  's' number nextPrompt
|
  score nextPrompt
;

score:
  number
|
  number INTEGRAL
;

number:
  DOUBLE
|
  INTEGRAL
;

prompt:
  {
    std::cout << "? ";
  }
;

nextPrompt:
  '\n' prompt
;
