%scanner ../Scanner/Scanner.h
%token-path ../Scanner/tokens.h

%token EMPTY DOUBLE INTEGRAL
%%
commands:
  commands prompt_command
|
  prompt_command
;

prompt_command:
  prompt command
;

command:
  EMPTY
  {
    ACCEPT();
  }
|
  mean
|
  stddev
|
  score
;

mean:
  'm' DOUBLE
;

stddev:
  's' DOUBLE
;

score:
  DOUBLE
|
  DOUBLE INTEGRAL
;

prompt:
  {
    std::cout << "? ";
  }
;