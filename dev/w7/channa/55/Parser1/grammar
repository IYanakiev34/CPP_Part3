%scanner ../Scanner/Scanner.h
%token-path ../Scanner/tokens.h

%token DOUBLE INTEGRAL

%%

start: prompt commands;

commands:
  commands command
|
  command
;

command:
  '\n'
  {
    ACCEPT();
  }
|
  'm' number nextPrompt
|
  's' number nextPrompt
|
  score nextPrompt
;

score:
  number
|
  number INTEGRAL
;

number:
  DOUBLE
|
  INTEGRAL
;

prompt:
  {
    std::cout << "? ";
  }
;

nextPrompt:
  '\n' prompt
;
