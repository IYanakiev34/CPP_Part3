%class-name = "Scanner"
%filenames = "scanner"

ident       [_a-z_A-Z][_a-z_A-Z0-9]*
int         [0-9]+
double      [0-9]+\.[0-9]+
white       [ \t]+
line        "\n#>"{int}"\n"

%%

{white}     return WHITESPACE;
{line}      return LINENR;
{int}       return INTEGRAL;
{double}    return DOUBLE;
{ident}     return IDENTIFIER;
[\n\r]      return NEWLINE;
.           return matched()[0];