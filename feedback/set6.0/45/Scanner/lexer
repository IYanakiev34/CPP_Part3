//JB: ?
identifier          [_a-zA-Z][_a-zA-Z0-9]*
integral            [0-9]+
double              [0-9]+\.[0-9]+
whitespace          [ \t]+
lineNr              "\n#>"{integral}"\n"

%%

{whitespace}        return WHITESPACE;

{lineNr}            return LINENR;
//JB: That would leave it to the caller of the scanner to adjust the line
//JB: number. That's probably not a good idea. The scanner itself should
//JB: take care of that.

{identifier}        return IDENTIFIER;
{integral}          return INTEGRAL;
{double}            return DOUBLE;
[\n\r]              return NEWLINE;
.                   return matched()[0];
